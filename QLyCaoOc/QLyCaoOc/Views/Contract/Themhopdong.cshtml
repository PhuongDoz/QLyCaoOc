@using QLyCaoOc.Models
@model QLyCaoOc.Models.HOPDONG

@{
    ViewBag.Title = "Themhopdong";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center"> THÊM HỢP ĐỒNG</h1><div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" role="form">
        
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <fieldset>
                <legend>HỢP ĐỒNG</legend>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Mã hợp đồng:
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Ngày lập
                    </div>
                    <div class="col-sm-9">
                        <input type="date" name="NgayLap" />
                        @Html.ValidationMessageFor(model => model.NgayLap)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Tiền cọc:
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.TienCoc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TienCoc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">
                        Thời gian thuê:
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownList("ThoiGianThue")
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>PHÒNG</legend>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Mã phòng:
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownList("MaPHG")

                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Tên phòng:
                    </div>
                    <div class="col-sm-9">
                        @ViewBag.TenPHG

                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Tầng:
                    </div>

                    <div class="col-sm-9">
                        @Html.DropDownList("Tang")
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Diện tích:
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownList("DienTich")
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>CÔNG TY</legend>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Mã công ty:
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBox("MaCongTy")

                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Tên công ty:
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBox("TenCT")

                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Địa chỉ công ty:
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBox("DiaChiCT")

                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        Điện thoại công ty:
                    </div>
                    <div class="col-sm-9">
                        @Html.TextBox("SDT")

                    </div>
                </div>
            </fieldset>
               
          
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-default" />
                    </div>
                </div>

        

                
            </div>
    }

    <div>
        @Html.ActionLink("Quay lại trang quản lý hợp đồng", "Index")
    </div>


