@model IEnumerable<QLyCaoOc.Models.PHONG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="dynamic-table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenPHG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DienTich)
            </th>
            <th></th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenPHG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienTich)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaPHG }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaPHG }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaPHG })
                </td>
            </tr>
        }

</table>
