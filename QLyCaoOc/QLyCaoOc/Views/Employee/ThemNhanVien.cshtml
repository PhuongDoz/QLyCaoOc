@model QLyCaoOc.Models.NHANVIEN

@{
    ViewBag.Title = "ThemNhanVien";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Thêm nhân viên</h2>

@using (Html.BeginForm("ThemNhanVien", "Employee", FormMethod.Post, new {@enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-2">Tên nhân viên: </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                @ViewData["Loi1"]
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Địa chỉ: </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChiNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChiNV, "", new { @class = "text-danger" })
                @ViewData["Loi2"]
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Số điện thoại: </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDTNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDTNV, "", new { @class = "text-danger" })
                @ViewData["Loi3"]
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Hình ảnh: </div>
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                @Html.ValidationMessageFor(model => model.HinhAnh)
                @ViewBag.Thongbao
                @*@Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Chức vụ: </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChucVu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                @ViewData["Loi4"]
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Mã công ty: </div>
            <div class="col-md-10">
                @Html.DropDownList("MaCongTy")
                @ViewData["Loi5"]
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Mã phòng: </div>
            <div class="col-md-10">
         @Html.DropDownList("MaPHG")
                @ViewData["Loi6"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
