@model QLyCaoOc.Models.CONGTY

@{
    ViewBag.Title = "Suacongty";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">SỬA THÔNG TIN CÔNG TY</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" role="form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset>
            <div class="form-group">
                <div class="control-label col-md-2">
                    Mã công ty :
                </div>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.MaCongTy, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaCongTy, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    Tên công ty :
                </div>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.TenCT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenCT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    Địa chỉ công ty :
                </div>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.DiaChiCT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiCT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    SĐT :
                </div>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>

            @*</div><div class="form-group">
                    <div class="control-label" col-md-2">
                        Mã hợp đồng :
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownList("MaHD", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
                    </div>
                </div>*@
        </fieldset>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Trở về trang quản lý", "Index")
</div>
