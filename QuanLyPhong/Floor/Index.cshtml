@model IEnumerable<QLyCaoOc.Models.TANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>DANH SÁCH ĐƠN GIÁ PHÒNG </h2>

<p>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Themtang","Floor")'">Thêm Mới</button>
</p>
<table class="table">
    <tr>
        <th>
           Tầng:
        </th>
        <th>
            Diện Tích:
        </th>
        <th>
            Giá:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tang1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienTich)
        </td>
        <td>
            @String.Format("{0:0,0}", item.Gia) VNĐ
            @*@Html.DisplayFor(modelItem => item.Gia) VNĐ*@
        </td>
        <td>
            @Html.ActionLink("Sửa", "Suatang", new { id1 = item.Tang1, id2 = item.DienTich }) |
            @Html.ActionLink("Xóa", "Xoatang", new { id1 = item.Tang1, id2 = item.DienTich })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Quay về trang trước", "Index")
</div>
